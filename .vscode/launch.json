{
    "configurations": [
        {
            "name": "Launch chrome",
            "url": "http://localhost:3000",
            "request": "launch",
            "type": "pwa-chrome",
            "webRoot": "${workspaceFolder}/src"
        },
        {
            "name": "Launch node",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/@sveltejs/kit/svelte-kit.js",
            "args": [
                "dev"
            ],
            "autoAttachChildProcesses": true
        }
    ]
}